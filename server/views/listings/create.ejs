<% layout("layouts/boilerplate") %> 

<div class="container my-8">
  <h2 class="text-2xl font-bold mb-6">Create a Listing</h2>
  <form action="/create" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>

    <!-- Title -->
    <div class="mb-4">
      <label for="title" class="form-label">Title</label>
      <input type="text" id="title" name="listing[title]" placeholder="Enter listing title" required
        class="form-control">
      <div class="invalid-feedback">Invalid Input</div>
    </div>

    <!-- Description -->
    <div class="mb-4">
      <label for="description" class="form-label">Description</label>
      <textarea id="description" name="listing[description]" placeholder="Describe your listing" required
        class="form-control"></textarea>
      <div class="invalid-feedback">Invalid Input</div>
    </div>

    <!-- Image URL + Price Row -->
    <div class="row mb-4">
      <div class="col-md-6 mb-3 md:mb-0">
        <label for="image" class="form-label">Image URL</label>
        <input type="file" id="image" name="listing[image]" accept="image/*" placeholder="https://example.com/image.jpg"
          class="form-control">
        <div class="invalid-feedback">Enter Valid URL</div>
      </div>
      <div class="col-md-6">
        <label for="price" class="form-label">Price (â‚¹)</label>
        <input type="number" id="price" name="listing[price]" placeholder="Enter price in INR" required
          class="form-control">
        <div class="invalid-feedback">Enter Valid Price</div>
      </div>
    </div>

    <!-- Location + Country Row -->
    <div class="row mb-4">
      <div class="col-md-6 mb-3 md:mb-0">
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" name="listing[location]" placeholder="City, State" required
          class="form-control">
        <div class="invalid-feedback">Enter Valid Location</div>
      </div>
      <div class="col-md-6">
        <label for="country" class="form-label">Country</label>
        <input type="text" id="country" name="listing[country]" placeholder="Enter country" required
          class="form-control">
        <div class="invalid-feedback">Enter Valid Country</div>
      </div>
    </div>

    <!-- Submit Button -->
    <button type="submit" style="background-color: #ff385c; border: none; border-radius: 0%;" class="btn btn-primary px-6 py-2">ADD +</button>
  </form>
</div>
 
<script src="/js/script.js"></script>
